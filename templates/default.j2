{% if novnc_host_option | default(false) %}
NOVNC_HOST_OPTION={{ novnc_host_option | join(',') }}
{% endif %}
{% if novnc_cidr_whitelist | default(false) %}
NOVNC_CIDR_WHITELIST={{ novnc_cidr_whitelist | join(',') }}
{% endif %}
{% if novnc_cidr_blacklist | default(false) %}
NOVNC_CIDR_BLACKLIST={{ novnc_cidr_blacklist | join(',') }}
